{
  "manifest_version": 3,
  "name": "V-Transer",
  "short_name": "V-Transer",
  "description": "Real-time tab audio transcription and subtitle translation with per-user history and quick content retrieval.",
  "version": "1.0.0",
  "minimum_chrome_version": "114",
  "action": {
    "default_title": "V-Transer"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs",
    "sidePanel",
    "identity",
    "offscreen",
    "tabCapture"
  ],
  "host_permissions": [
    "http://127.0.0.1:8000/*",
    "http://localhost:8000/*",
    "https://oauth2.googleapis.com/*",
    "https://accounts.google.com/*",
    "https://www.googleapis.com/*",
    "https://www.facebook.com/*",
    "https://graph.facebook.com/*",
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "service_worker.js",
    "type": "module"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "audio-worklet/pcm-processor.js",
        "offscreen.html",
        "offscreen.js",
        "overlay.css",
        "overlay.js",
        "panel.css",
        "panel.js",
        "icons/*.svg",
        "auth/*"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
